{
  "swagger": "2.0",
  "info": {
    "title": "CSE 341 Project API",
    "description": "API for managing Students and Courses with OAuth authentication",
    "version": "1.0.0"
  },
  "host": "cse341-7-zsb3.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "securityDefinitions": {
    "oauth": {
      "type": "oauth2",
      "authorizationUrl": "https://github.com/login/oauth/authorize",
      "tokenUrl": "https://github.com/login/oauth/access_token",
      "flow": "accessCode",
      "scopes": {
        "user:email": "Access your email address"
      }
    }
  },
  "paths": {
    "/auth/github": {
      "get": {
        "tags": ["Auth"],
        "summary": "Login with GitHub OAuth",
        "description": "Redirects user to GitHub for authentication.",
        "responses": {
          "302": { "description": "Redirect to GitHub login page" }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": ["Auth"],
        "summary": "Logout user",
        "description": "Ends the user session and logs them out.",
        "responses": {
          "200": { "description": "Successfully logged out" }
        }
      }
    },
    "/protected": {
      "get": {
        "tags": ["Auth"],
        "summary": "Protected route",
        "description": "Requires authentication. Returns 401 if not logged in.",
        "security": [
      { "oauth": ["user:email"] }
     ],
      "responses": {
          "200": { "description": "User is authenticated" },
          "401": { "description": "Unauthorized - user not logged in" }
        }
      }
    },
    "/dashboard": {
      "get": {
        "tags": ["Auth"],
        "summary": "Dashboard route",
        "description": "Second protected route. Requires authentication.",
        "security": [
          { "oauth": [] }
        ],
        "responses": {
          "200": { "description": "User dashboard returned successfully" },
          "401": { "description": "Unauthorized - user not logged in" }
        }
      }
    },

    "/students": {
      "get": {
        "tags": ["Students"],
        "summary": "Get all students",
        "responses": {
          "200": { "description": "List of students retrieved successfully" }
        }
      },
      "post": {
        "tags": ["Students"],
        "summary": "Create a new student",
        "parameters": [
          {
            "in": "body",
            "name": "student",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "age": { "type": "number" },
                "email": { "type": "string" },
                "department": { "type": "string" },
                "enrollmentYear": { "type": "number" },
                "gba": { "type": "number" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Student created successfully" }
        }
      }
    },
    "/students/{id}": {
      "put": {
        "tags": ["Students"],
        "summary": "Update a student by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "in": "body", "name": "student", "required": true, "schema": { "type": "object" } }
        ],
        "responses": {
          "200": { "description": "Student updated successfully" },
          "404": { "description": "Student not found" }
        }
      },
      "delete": {
        "tags": ["Students"],
        "summary": "Delete a student by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Student deleted successfully" },
          "404": { "description": "Student not found" }
        }
      }
    },
    "/courses": {
      "get": {
        "tags": ["Courses"],
        "summary": "Get all courses",
        "responses": {
          "200": { "description": "List of courses retrieved successfully" }
        }
      },
      "post": {
        "tags": ["Courses"],
        "summary": "Create a new course",
        "parameters": [
          {
            "in": "body",
            "name": "course",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "description": { "type": "string" },
                "credits": { "type": "number" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Course created successfully" }
        }
      }
    },
    "/courses/{id}": {
      "put": {
        "tags": ["Courses"],
        "summary": "Update a course by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "in": "body", "name": "course", "required": true, "schema": { "type": "object" } }
        ],
        "responses": {
          "200": { "description": "Course updated successfully" },
          "404": { "description": "Course not found" }
        }
      },
      "delete": {
        "tags": ["Courses"],
        "summary": "Delete a course by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Course deleted successfully" },
          "404": { "description": "Course not found" }
        }
      }
    }
  }
}